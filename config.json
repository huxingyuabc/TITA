{
    "task": "mixed"
    ,
    "model": "plain"
    ,
    "scale": 1
    ,
    "n_channels": 1 // 1 for grayscale, 3 for color
    ,
    "path": {
      "root": "logs/" // save path
      ,
      "pretrained_netG": null // path of pretrained model. We fine-tune X3/X4 models from X2 model, so that `G_optimizer_lr` and `G_scheduler_milestones` can be halved to save time.
      ,
      "pretrained_netE": null // path of pretrained model
    },
    "datasets": {
      "train": {
        "name": "train_dataset" // just name
        ,
        "dataset_type": "mixed_equal" // "mixed"
        ,
        "trainsets": {
          "IVIF": {
            "LLVIP": {
              "task_path": "/data/TC-MoA-train/LLVIP",
              "subdir1": "visible/train",
              "subdir2": "infrared/train"
            }
          },
          "MFIF": {
            "RealMFF": {
              "task_path": "/data/TC-MoA-train/RealMFF",
              "subdir1": "imageB",
              "subdir2": "imageA"
            },
            "MFI-WHU": {
              "task_path": "/data/TC-MoA-train/MFI-WHU",
              "subdir1": "source_2",
              "subdir2": "source_1"
            }
          },
          "MEIF": {
            "SCIE": {
              "task_path": "/data/TC-MoA-train/SCIE",
              "subdir1": "oe",
              "subdir2": "ue"
            }
          }
        },
        "patch_size": 64 // 64 224
        ,
        "H_size": 128 // 128/192/256/512
        ,
        "dataloader_shuffle": true,
        "dataloader_num_workers": 4,
        "dataloader_batch_size": 8 // batch size
      }
    },
    "netG": {
      "net_type": "swinfusion",
      "upscale": 1
      ,
      "in_chans": 1,
      "img_size": 128,
      "window_size": 8,
      "img_range": 1.0,
      "depths": [
        6,
        6,
        6,
        6
      ],
      "embed_dim": 60,
      "num_heads": [
        6,
        6,
        6,
        6
      ],
      "mlp_ratio": 2,
      "upsampler": null // "pixelshuffle" | "pixelshuffledirect" | "nearest+conv" | null
      ,
      "resi_connection": "oaf" // "1conv" | "3conv"
      ,
      "init_type": "default"
    },
    "train": {
      "manual_seed": 17,
      "G_lossfn_types": {
        "IVIF": "vif",
        "MFIF": "mff",
        "MEIF": "mef"
      } // "uni"
      ,
      "G_lossfn_weight": 1.0 // default
      ,
      "E_decay": 0.999 // Exponential Moving Average for netG: set 0 to disable; default setting 0.999
      ,
      "G_optimizer_type": "adam" // fixed, adam is enough
      ,
      "G_optimizer_lr": 2e-5 // learning rate
      ,
      "G_optimizer_wd": 0 // weight decay, default 0
      ,
      "G_optimizer_clipgrad": null
      ,
      "G_optimizer_reuse": true
      ,
      "G_scheduler_type": "MultiStepLR" // "MultiStepLR" is enough
      ,
      "G_scheduler_milestones": [
        250000,
        400000,
        450000,
        475000,
        500000
      ],
      "G_scheduler_gamma": 0.5,
      "G_regularizer_orthstep": null // unused
      ,
      "G_regularizer_clipstep": null // unused
      ,
      "G_param_strict": true,
      "E_param_strict": true,
      "checkpoint_save": 1000 // for saving model
      ,
      "checkpoint_print": 200 // for print
      ,
      "iteration": 20000,
      "epoch": 500,
      "gamma": 1e-3,  // famo hyper-parameters
      "method_params_lr": 0.025 // famo hyper-parameters
    }
  }